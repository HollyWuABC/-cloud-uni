			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "发现", // 首页
				"app-plus":{
					"titleNView":false // 去掉页面的导航栏
				}
			}
		}
	    ,{
            "path" : "pages/account/account",
            "style" :                                                                                    
