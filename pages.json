        ,{
            "path" : "pages/cloud/cloud",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "云村"
            }
            
        }
        ,{
            "path" : "pages/mine/mine",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
				"app-plus":{
					"titleNView":false // 去掉页面的导航栏
				}
            }
            
        }
        ,{
            "path" : "pages/video/video",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "视频",
				"app-plus":{
					"titleNView":false, // 去掉页面的导航栏
